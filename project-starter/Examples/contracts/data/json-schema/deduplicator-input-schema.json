{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DeduplicatorInput",
  "description": "Схема для валидации входных данных модуля Deduplicator",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["id"],
    "properties": {
      "id": {
        "type": "string",
        "description": "Уникальный идентификатор записи"
      },
      "isbn": {
        "type": ["string", "null"],
        "description": "ISBN книги",
        "pattern": "^(?:ISBN(?:-1[03])?:? )?(?=[0-9X]{10}$|(?=(?:[0-9]+[- ]){3})[- 0-9X]{13}$|97[89][0-9]{10}$|(?=(?:[0-9]+[- ]){4})[- 0-9]{17}$)(?:97[89][- ]?)?[0-9]{1,5}[- ]?[0-9]+[- ]?[0-9]+[- ]?[0-9X]$"
      },
      "sku": {
        "type": ["string", "null"],
        "description": "Артикул или SKU товара"
      },
      "title": {
        "type": "string",
        "description": "Название товара",
        "minLength": 1
      },
      "author": {
        "type": ["string", "null"],
        "description": "Автор книги"
      },
      "publisher": {
        "type": ["string", "null"],
        "description": "Издательство книги"
      },
      "year": {
        "type": ["integer", "null"],
        "description": "Год издания книги",
        "minimum": 1000,
        "maximum": 2100
      },
      "price": {
        "type": ["number", "null"],
        "description": "Цена товара",
        "minimum": 0
      },
      "category": {
        "type": ["string", "null"],
        "description": "Категория товара"
      },
      "description": {
        "type": ["string", "null"],
        "description": "Описание товара"
      },
      "pages": {
        "type": ["integer", "null"],
        "description": "Количество страниц в книге",
        "minimum": 1
      },
      "weight": {
        "type": ["number", "null"],
        "description": "Вес товара в граммах",
        "minimum": 0
      },
      "dimensions": {
        "type": ["object", "null"],
        "description": "Размеры товара",
        "properties": {
          "length": {
            "type": "number",
            "description": "Длина товара в мм",
            "minimum": 0
          },
          "width": {
            "type": "number",
            "description": "Ширина товара в мм",
            "minimum": 0
          },
          "height": {
            "type": "number",
            "description": "Высота товара в мм",
            "minimum": 0
          }
        }
      },
      "images": {
        "type": ["array", "null"],
        "description": "Список URL изображений товара",
        "items": {
          "type": "string",
          "format": "uri"
        }
      },
      "vendor": {
        "type": ["string", "null"],
        "description": "Поставщик товара"
      },
      "vendor_id": {
        "type": ["string", "null"],
        "description": "Идентификатор товара у поставщика"
      },
      "barcode": {
        "type": ["string", "null"],
        "description": "Штрихкод товара",
        "pattern": "^[0-9]{8,14}$"
      },
      "series": {
        "type": ["string", "null"],
        "description": "Серия книги"
      },
      "language": {
        "type": ["string", "null"],
        "description": "Язык книги"
      },
      "binding": {
        "type": ["string", "null"],
        "description": "Тип переплета книги"
      },
      "metadata": {
        "type": ["object", "null"],
        "description": "Дополнительные метаданные товара",
        "additionalProperties": true
      }
    },
    "additionalProperties": true
  },
  "minItems": 1
}
