{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Product",
  "description": "Схема для валидации данных о товарах",
  "type": "object",
  "required": ["Название", "Артикул"],
  "properties": {
    "Название": {
      "type": "string",
      "description": "Название товара"
    },
    "Артикул": {
      "type": "string",
      "description": "Артикул товара"
    },
    "ISBN": {
      "type": "string",
      "description": "ISBN книги",
      "pattern": "^(?:ISBN(?:-1[03])?:? )?(?=[0-9X]{10}$|(?=(?:[0-9]+[- ]){3})[- 0-9X]{13}$|97[89][0-9]{10}$|(?=(?:[0-9]+[- ]){4})[- 0-9]{17}$)(?:97[89][- ]?)?[0-9]{1,5}[- ]?[0-9]+[- ]?[0-9]+[- ]?[0-9X]$"
    },
    "Цена": {
      "type": "number",
      "description": "Цена товара",
      "minimum": 0
    },
    "Количество": {
      "type": "integer",
      "description": "Количество товара",
      "minimum": 0
    },
    "Категория": {
      "type": "string",
      "description": "Категория товара"
    },
    "Автор": {
      "type": "string",
      "description": "Автор книги"
    },
    "Издательство": {
      "type": "string",
      "description": "Издательство книги"
    },
    "Год издания": {
      "type": "integer",
      "description": "Год издания книги",
      "minimum": 1000,
      "maximum": 2100
    },
    "Описание": {
      "type": "string",
      "description": "Описание товара"
    },
    "Вес": {
      "type": "number",
      "description": "Вес товара в граммах",
      "minimum": 0
    },
    "Размеры": {
      "type": "object",
      "description": "Размеры товара",
      "properties": {
        "Длина": {
          "type": "number",
          "description": "Длина товара в мм",
          "minimum": 0
        },
        "Ширина": {
          "type": "number",
          "description": "Ширина товара в мм",
          "minimum": 0
        },
        "Высота": {
          "type": "number",
          "description": "Высота товара в мм",
          "minimum": 0
        }
      }
    },
    "Изображения": {
      "type": "array",
      "description": "Список URL изображений товара",
      "items": {
        "type": "string",
        "format": "uri"
      }
    },
    "Метаданные": {
      "type": "object",
      "description": "Дополнительные метаданные товара",
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
